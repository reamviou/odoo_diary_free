<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_vitoudiary_reporttype_list" model="ir.ui.view">
        <field name="name">vitoudiary.reporttype.list</field>
        <field name="model">vitoudiary.reporttype</field>
        <field name="arch" type="xml">
            <list string="Report Type" default_order="name asc" expand="1" editable="top">

                <field name="name"/>
                <field name="department_id"/>


                <!--                <field name="image" widget="image" options="{'size': [50, 50]}"/>-->
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="write_date"/>
                <field name="write_uid"/>

            </list>

        </field>
    </record>

    <record id="view_vitoudiary_reporttype_form" model="ir.ui.view">
        <field name="name">vitoudiary.reporttype.form</field>
        <field name="model">vitoudiary.reporttype</field>
        <field name="arch" type="xml">
            <form string="Report Type">

                <!--                <header>-->
                <!--                     <button name="action_done" type="object" string="Done" class="btn-success"-->
                <!--                            invisible="state =='done'"/>-->
                <!--                     <button name="action_canceled" type="object" string="Cancel" class="btn-danger"-->
                <!--                            invisible="state =='posted'"-->
                <!--                            groups="vitou_diary.group_vitoudiary_staff,vitou_diary.group_vitoudiary_manager,vitou_diary.group_vitoudiary_administrator"/>-->


                <!--                    <field name="state" widget="statusbar"-->
                <!--                           statusbar_visible="posted, done"/>-->
                <!--                </header>-->

                <sheet>


                    <group>
                        <field name="name"/>
                        <field name="department_id"/>

                    </group>

                </sheet>

                   <chatter/>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" groups="base.group_user"/>-->
<!--                    <field name="message_ids"/>-->

<!--                </div>-->
            </form>

        </field>
    </record>

    <record id="view_vitoudiary_reporttype_search" model="ir.ui.view">

        <field name="name">vitoudiary.reporttype.search</field>
        <field name="model">vitoudiary.reporttype</field>

        <field name="arch" type="xml">

            <search position="inside">
                <field name="name"/>
                <field name="department_id"/>


                <group expand="1" string="Group By Department">
                    <filter name="filter_group_dept" string="Group by Department Report"
                            context="{'group_by': 'department_id', 'expand': 1}"/>
                </group>
                <!--                <filter name="filter_today" string="Today" domain="[('date','=',current_date)]" />-->
                <!--                 <filter name="filter_groupby_name" string="Group Name" context="{'group_by':'employee_name'}"/>-->


                <!--                <filter name="filter_state_stockconfirmed" string="Stockconfirmed" domain="[('state','=','stockconfirmed')]"/>-->

                <searchpanel>
                    <!--                        <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>-->

                    <field name="department_id" icon="fa-university" enable_counters="1"/>

                    <!--                    <field name="priority_id" icon="fa-users" enable_counters="1"/>-->
                    <!--                    <field name="status_id" icon="fa fa-filter" enable_counters="1"/>-->
                </searchpanel>
            </search>

        </field>
    </record>


    <record id="action_vitoudiary_reporttype" model="ir.actions.act_window">
        <field name="name">Report Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vitoudiary.reporttype</field>
        <field name="view_mode">list</field>
        <!--        <field name="context">{'search_default_filter_group_dept':1}</field>-->

    </record>


</odoo>